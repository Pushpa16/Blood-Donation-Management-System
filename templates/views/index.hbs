    <main>
      <section class="home">
        <div class="container">
          <div class="even-columns">
            <div class="hero-text-container">
              <div class="hero-text">
                <h2 class="hero-img-text">Donate BLOOD</h2>
                <h2 class="hero-img-text" data-type="inverted">Save Lives</h2>
                <h4>Become a donor or request for blood And help save lives</h4>
