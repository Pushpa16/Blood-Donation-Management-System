        <div class="details">
          <div class="card-header">
            <h4 class="data-header">Your Data:-</h4>
            <form action="/editInfo" method="post">
              <input class="hidden" name="email" type="email" value="{{user.Email}}">
              <input class="hidden" name="password" type="password" value="{{user.Password}}">
              <button type="submit">Edit Information ?</button>
            </form>
            {{!-- <a href="/editInfo/{{user.Email}}">Edit information ?</a> --}}
          </div>
          <div class="card">
          <form action="/changePasswd" method="post">
            <div class="info even-columns">
              <label for="name">Name : </label>
              <input name="name" value="{{user.Name}}" readonly="readonly"></input>
            </div>
            <div class="info even-columns">
              <label for="email">Email : </label>
              <input name="email" value={{user.Email}} readonly="readonly"></input>
            </div>
            <div class="info even-columns">
              <label for="group">Blood Group : </label>
              <input name="group" value={{user.Bgroup}} readonly="readonly"></input>
            </div>
            <div class="info even-columns">
              <label for="PhNo">Mobile Number : </label>
              <input name="PhNo" value={{user.PhNo}} readonly="readonly"></input>
            </div>
            <div class="info even-columns">
              <label for="PhNo">Age : </label>
              <input name="PhNo" value={{user.Age}} readonly="readonly"></input>
            </div>
            <div class="info even-columns">
              <label for="PhNo">Gender : </label>
              <input name="PhNo" value={{user.Gender}} readonly="readonly"></input>
            </div>
            <div class="info even-columns">
              <label for="location">Location : </label>
              <input name="location" value={{user.Location}} readonly="readonly"></input>
            </div>
            <div class="info even-columns hidden">
              <label for="password"></label>
              <input name="password" value={{user.Password}} readonly="readonly"></input>
            </div>
            {{!-- <a href="/changePasswd/{{user.Email}}">Change Password?</a> --}}
            {{!-- <form action="/api/userlogin" method="post">
              <input class="hidden" name="email" type="email" value="{{user.Email}}">
