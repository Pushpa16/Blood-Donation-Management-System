    <link rel="stylesheet" href="/css/userdash.css">
    <title>Login</title>
    <script src="/js/userdash.js" defer></script>
</head>
<body>
    <nav>
      <div class="nav-container">
        <div class="logo-container">
          <div class="logo"></div>
          <a href="/">
          <h1>Blood Care</h1>
          </a>
        </div>
        <ul class="primary-nav-items">
          <li>
            <form action="/userReqPage" method="post" style="background-color: inherit;">
                <input class="hidden" type="text" name="name" value={{ user.Name }}>
                <input class="hidden" type="email" name="email" value={{ user.Email }}>
                <input class="hidden" type="password" name="password" value="{{ user.Password }}">
                <button type="submit" class="vol-i">Requests</button>
            </form>
          </li>
          <li><a href="/logout"><button>Logout</button></a></li>
        </ul>
      </div>
    </nav>
    <main>
      <div class="user-container">
        <h1>Welcome {{user.Name}}</h1> 
          {{!-- <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="toast-header">
